{
  "name": "xivdyetools-discord-bot",
  "version": "1.0.6",
  "description": "Discord bot for XIV Dye Tools - Color harmony, matching, and accessibility tools for FFXIV",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy:translations",
    "copy:translations": "tsx scripts/copy-translations.ts",
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true, force: true})\"",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run src/__tests__/integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "deploy": "tsx src/scripts/deploy.ts",
    "deploy:full": "tsx src/scripts/deploy.ts --full",
    "prepare": "husky install || true"
  },
  "keywords": [
    "discord",
    "bot",
    "ffxiv",
    "final-fantasy-xiv",
    "color",
    "harmony",
    "dye",
    "accessibility",
    "colorblind"
  ],
  "author": "Flash Galatine",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@napi-rs/canvas": "0.1.52",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "sharp": "0.33.1",
    "xivdyetools-core": "^1.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.0",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ssh2-sftp-client": "^12.0.1",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}